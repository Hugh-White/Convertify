<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Convertify.MVVM.Views.MenuView"
             Title="MenuView"
             NavigationPage.HasNavigationBar="False">

    <!--<ContentPage.Resources>
        <Color x:Key="AppColor1">#660066</Color>
        <Color x:Key="AppColor2">#990099</Color>
        <Color x:Key="AppColor3">#CC00CC</Color>
        <Color x:Key="AppColor4">#FF00FF</Color>
        <Color x:Key="TextColor">White</Color>
    </ContentPage.Resources>-->

    <Grid ColumnDefinitions=".33*, .33*, .33*"
          RowDefinitions=".1*, .3*, .3*, .3*">

        <Label Grid.ColumnSpan="3"
               BackgroundColor="Black"
               FontAttributes="Bold"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextColor="{StaticResource TextColor}"
               Text="- Convertify -" />

        <!--#region Information -->
        <Grid Grid.Row="1"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor1}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xF0A0;"
                                     Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
                   Text="Information"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />
            

        </Grid>
        <!--#endregion-->

        <!--#region Volume -->
        <Grid Grid.Row="1"
              Grid.Column="1"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor2}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xF1B2;"
                                     Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
                   Text="Volume"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

        <!--#region Length -->
        <Grid Grid.Row="1"
              Grid.Column="2"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor3}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                             Glyph="&#xF044;"
                             Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
           Text="Length"
           TextColor="{StaticResource TextColor}"
           VerticalTextAlignment="Center"
           HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

        <!--#region Mass -->
        <Grid Grid.Row="2"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor2}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xF24E;"
                                     Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
                   Text="Mass"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

        <!--#region Temperature -->
        <Grid Grid.Row="2"
              Grid.Column="1"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor3}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xE801;"
                                     Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
           Text="Temperature"
           TextColor="{StaticResource TextColor}"
           VerticalTextAlignment="Center"
           HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

        <!--#region Energy -->
        <Grid Grid.Row="2"
              Grid.Column="2"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor2}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xE802;"
                                     Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
                   Text="Energy"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

        <!--#region Area -->
        <Grid Grid.Row="3"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor3}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xE803;"
                                     Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
                   Text="Area"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

        <!--#region Speed -->
        <Grid Grid.Row="3"
              Grid.Column="1"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor2}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                             Glyph="&#xF0E4;"
                             Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
           Text="Speed"
           TextColor="{StaticResource TextColor}"
           VerticalTextAlignment="Center"
           HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

        <!--#region Duration -->
        <Grid Grid.Row="3"
              Grid.Column="2"
              Padding="15"
              RowDefinitions=".7*, .3*"
              BackgroundColor="{StaticResource AppColor1}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="Icons"
                                     Glyph="&#xE800;"
                                     Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1"
                   Text="Duration"
                   TextColor="{StaticResource TextColor}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center" />

        </Grid>
        <!--#endregion-->

    </Grid>
    
</ContentPage>